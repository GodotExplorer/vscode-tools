{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "out",
		"lib": [
			"es2020",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": false,
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@utils": [
				"./src/utils"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@logger": [
				"./src/logger"
			]
		}
	},
	"exclude": [
		"node_modules",
		"out",
		"tools"
	]
}
